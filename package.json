{
	"name": "svack",
	"version": "0.0.0",
	"description": "A lightweight and fully type-safe approach to handling modals, overlays and portals in Svelte/Sveltekit applications",
	"author": "ivanhofer",
	"homepage": "https://github.com/ivanhofer/svack#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ivanhofer/svack.git"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"stack",
		"modal",
		"overlay",
		"portal",
		"typesafe"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"devDependencies": {
		"@playwright/test": "^1.26.0",
		"@sveltejs/adapter-auto": "1.0.0-next.80",
		"@sveltejs/kit": "1.0.0-next.504",
		"@sveltejs/package": "1.0.0-next.5",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@typescript-eslint/parser": "^5.38.1",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.1",
		"svelte": "^3.50.1",
		"svelte-check": "^2.9.1",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "^4.8.3",
		"vite": "^3.1.3"
	},
	"type": "module",
	"funding": {
		"type": "github",
		"url": "https://github.com/sponsors/ivanhofer"
	}
}